<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>                                     
  <div class="field">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>