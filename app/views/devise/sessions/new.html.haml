.grid_8
  %h1.title.tk-bree
    Sign in
  - form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    - if alert
      #errorExplanation
        %h2
          = alert
    .field
      = f.label :email
      = f.text_field :email
    .field
      = f.label :password
      = f.password_field :password
    .field
      - if devise_mapping.rememberable?
        = f.check_box :remember_me
        = f.label(:remember_me, 'Remember Me', {:class => 'checkbox_label'})
    .actions
      = f.submit("Sign In", {:class => 'btn tk-bree'})
    .clear
  = render :partial => "devise/shared/links"